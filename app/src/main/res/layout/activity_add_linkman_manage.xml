<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px56"
        android:layout_margin="@dimen/px10"
        android:background="#e5f7f5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/px18"
            android:text="电话/用户名:"
            android:textColor="#202020"
            android:textSize="@dimen/item_text1"/>

        <EditText
            android:id="@+id/et_add_linkman_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/px18"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入电话或者用户名"
            android:textColor="#202020"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px56"
        android:layout_margin="@dimen/px10"
        android:background="#e5f7f5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/px18"
            android:text="验证信息:"
            android:textColor="#202020"
            android:textSize="@dimen/item_text1"/>

        <EditText
            android:id="@+id/et_add_linkman_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/px18"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请输入验证信息"
            android:textColor="#202020"
            android:textSize="15sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/b_song_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px46"
        android:layout_margin="@dimen/px15"
        android:background="@drawable/bg_choose_green"
        android:text="完成并发送"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px18"/>

</LinearLayout>
