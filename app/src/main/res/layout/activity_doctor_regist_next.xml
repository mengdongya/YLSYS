<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="store.chinaotec.com.medicalcare.activity.DoctRegNextActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px40"
        android:background="@color/white">

        <ImageView
            android:id="@+id/doctor_regist_back"
            android:layout_width="@dimen/px23"
            android:layout_height="@dimen/px23"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/px5"
            android:src="@mipmap/top_back_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完善资料"
            android:textColor="@color/light_back"
            android:textSize="@dimen/px20" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="@color/mainToolLine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/px15"
            android:text="基本信息(必填)"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:text="姓名"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写姓名"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:text="身份证"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/id_card_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写身份证号"
            android:inputType="number"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:text="专业职称"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/profession_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写专业职称"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:text="服务机构"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/service_organt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写服务机构"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <RelativeLayout
        android:id="@+id/relative_work"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center">

        <TextView
            android:id="@+id/works"
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px15"
            android:text="从业经历"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/work_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_toRightOf="@+id/works"
            android:hint="请填写从业经历"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px10"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <RelativeLayout
        android:id="@+id/relative_specia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center">

        <TextView
            android:id="@+id/specia"
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px15"
            android:text="专科特长"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/specia_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_toRightOf="@+id/specia"
            android:hint="请填写专科特长"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px10"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <RelativeLayout
        android:id="@+id/relative_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:gravity="center">

        <TextView
            android:id="@+id/account"
            android:layout_width="@dimen/px80"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px15"
            android:text="收款账户"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/receive_accunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_toRightOf="@+id/account"
            android:hint="请填写收款账户"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px10"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine" />

    <Button
        android:id="@+id/doctor_regist"
        android:layout_width="@dimen/px280"
        android:layout_height="@dimen/px40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px25"
        android:background="@drawable/round_shape_sign"
        android:text="立即注册"
        android:textColor="@android:color/white" />
</LinearLayout>
