<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_forum"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTooBar"
        android:padding="@dimen/px5">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px3"
            android:src="@mipmap/back_top_finsh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:lines="1"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/iv_title_back"
            android:layout_toLeftOf="@+id/tv_doctor_setup"
            android:text="名医堂"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/tv_doctor_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:text="发表"
            android:textSize="@dimen/px16" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_special_hall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorTooBar"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorTooBar"
        app:tabIndicatorHeight="@dimen/px1"
        android:background="@color/white"
        app:tabTextColor="@color/gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_special_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>