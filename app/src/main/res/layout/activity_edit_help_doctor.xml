<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="store.chinaotec.com.medicalcare.activity.EditHelpDoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTooBar"
        android:gravity="center"
        android:padding="@dimen/px5">

        <include layout="@layout/base_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改求救医生信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="修改"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px56"
        android:layout_margin="@dimen/px10"
        android:background="#e5f7f5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px23"
            android:layout_marginTop="@dimen/px18"
            android:text="姓名"
            android:textColor="#202020"
            android:textSize="@dimen/item_text1" />

        <EditText
            android:id="@+id/edit_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px23"
            android:layout_marginTop="@dimen/px18"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="#202020"
            android:textColorHint="#b4c4c2"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px56"
        android:layout_margin="@dimen/px10"
        android:background="#e5f7f5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px23"
            android:layout_marginTop="@dimen/px18"
            android:text="手机号码"
            android:textColor="#202020"
            android:textSize="@dimen/item_text1" />

        <EditText
            android:id="@+id/edit_doctor_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px23"
            android:layout_marginTop="@dimen/px18"
            android:inputType="number"
            android:maxLength="11"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="#202020"
            android:textColorHint="#b4c4c2"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
