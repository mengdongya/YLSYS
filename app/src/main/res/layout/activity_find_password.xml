<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="store.chinaotec.com.medicalcare.activity.FindPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTooBar"
        android:padding="@dimen/px5">

        <include layout="@layout/base_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/px20"/>
    </RelativeLayout>
    \

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/goHopitalLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp16"/>

        <EditText
            android:id="@+id/findpas_phone"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/px15"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="number"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/goHopitalLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px20"
            android:text="验证码:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_text1"/>

        <EditText
            android:id="@+id/findpas_vercode"
            android:layout_width="@dimen/px0"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="15sp"/>

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <store.chinaotec.com.medicalcare.view.TimeView
            android:id="@+id/findpas_get_vercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textColor="@color/text_color_txt_eval_account"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/goHopitalLine"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px20"
            android:text="密   码:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_text1"/>


        <EditText
            android:id="@+id/new_password"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:password="true"
            android:textSize="15sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/goHopitalLine"/>

    <Button
        android:id="@+id/sure_password"
        android:layout_width="@dimen/px280"
        android:layout_height="@dimen/px35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px45"
        android:background="@drawable/round_shape_sign"
        android:gravity="center"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp16"/>
</LinearLayout>