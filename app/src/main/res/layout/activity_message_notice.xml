<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="store.chinaotec.com.medicalcare.activity.MessageNoticeActivity">

    <RelativeLayout
        android:id="@+id/linear_message_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTooBar"
        android:padding="@dimen/px5">

        <include layout="@layout/base_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/message_notice"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px20"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px22"
            android:layout_weight="1"
            android:text="@string/news_push"
            android:textColor="@color/mesNoticeTitle"
            android:textSize="@dimen/px14"/>

        <ImageButton
            android:id="@+id/news_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/message_notice_close"
            android:textColor="@color/goHospitalContTitle"
            android:textSize="@dimen/px10"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px14"
        android:background="@color/regisHospitLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px22"
            android:layout_weight="1"
            android:text="@string/doctor_reply_reminder"
            android:textColor="@color/mesNoticeTitle"
            android:textSize="@dimen/px14"/>

        <ImageButton
            android:id="@+id/doctor_reply_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/message_notice_close"
            android:textColor="@color/goHospitalContTitle"
            android:textSize="@dimen/px10"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px14"
        android:background="@color/regisHospitLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px22"
            android:layout_weight="1"
            android:text="@string/health_plan_push"
            android:textColor="@color/mesNoticeTitle"
            android:textSize="@dimen/px14"/>

        <ImageButton
            android:id="@+id/health_plan_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/message_notice_close"
            android:textColor="@color/goHospitalContTitle"
            android:textSize="@dimen/px10"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px14"
        android:background="@color/regisHospitLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px22"
            android:layout_weight="1"
            android:text="@string/product_news_push"
            android:textColor="@color/mesNoticeTitle"
            android:textSize="@dimen/px14"/>

        <ImageButton
            android:id="@+id/product_news_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/message_notice_close"
            android:textColor="@color/goHospitalContTitle"
            android:textSize="@dimen/px10"/>
    </LinearLayout>
</LinearLayout>
