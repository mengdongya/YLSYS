<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:union="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="store.chinaotec.com.medicalcare.activity.MedicUnionTreatActivity">

    <include layout="@layout/include_title"/>

    <store.chinaotec.com.medicalcare.view.MedUnionView
        android:id="@+id/linear_far_treat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px5"
        union:unionItemDescrip="使用者发起会诊"
        union:unionItemLogo="@mipmap/far_treat"
        union:unionItemTitle="远程诊疗"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px5"
        android:background="@color/mainToolLine"/>

    <store.chinaotec.com.medicalcare.view.MedUnionView
        android:id="@+id/linear_video_meet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px5"
        union:unionItemDescrip="医院发起会诊,会议,教学"
        union:unionItemLogo="@mipmap/video_meet"
        union:unionItemTitle="医联体视频通信"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px5"
        android:background="@color/mainToolLine"/>

    <store.chinaotec.com.medicalcare.view.MedUnionView
        android:id="@+id/linear_share_mess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px5"
        union:unionItemDescrip="医疗机构,科诊机构,政府信息"
        union:unionItemLogo="@mipmap/share_inform"
        union:unionItemTitle="医联体信息共享"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px5"
        android:background="@color/mainToolLine"/>

    <store.chinaotec.com.medicalcare.view.MedUnionView
        android:id="@+id/linear_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px5"
        union:unionItemDescrip="医生,护士签约"
        union:unionItemLogo="@mipmap/sign_nurse"
        union:unionItemTitle="医护签约"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px5"
        android:background="@color/mainToolLine"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px10"
        android:paddingRight="@dimen/px20"
        android:text="远程诊疗：病人可以在线发起会诊，支持患者、医生一对一、一对多"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/small_title_sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px5"
        android:paddingRight="@dimen/px20"
        android:text="医联体视频通信：医疗预防科研机构均可在线发起会议、会诊、教学"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/small_title_sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px5"
        android:paddingRight="@dimen/px20"
        android:text="医联体信息共享：医疗机构、医院机构、政府等信息显示、共享"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/small_title_sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginTop="@dimen/px5"
        android:paddingRight="@dimen/px20"
        android:text="医护签约：提供患者与医生、护士签约"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/small_title_sp"/>
</LinearLayout>
