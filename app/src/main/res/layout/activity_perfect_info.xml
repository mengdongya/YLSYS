<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTooBar"
        android:padding="@dimen/px5">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px3"
            android:src="@mipmap/back_top_finsh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="补充患者信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px20" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="患者性别: "
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_chose_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/chose_sex_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:checked="true"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/chose_sex_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RadioGroup>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_gray"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/rl_inquiry_choose_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="患者出生日期:"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_inquiry_choose_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="16sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_begin_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成并开始"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:padding="@dimen/dp10"
        android:background="@drawable/bg_choose_green"/>

</LinearLayout>