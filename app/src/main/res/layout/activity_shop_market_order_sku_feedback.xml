<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_backgroud_color"
    android:orientation="vertical">

    <!-- 引用标题栏布局 -->

    <include layout="@layout/include_shop_market_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/evaluate_title_txt1"
                android:textColor="@color/text_color_sku_name"
                android:textSize="17sp" />

            <ImageView
                style="@style/common_line_horizontal"
                android:contentDescription="@string/common_line_vertica" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_order_evaluate_img"
                        style="@style/common_line_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/error_img" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_order_evaluate_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:lines="2"
                                android:text="Classic pop Mold 经典冰棒模具"
                                android:textColor="@color/text_color_sku_name"
                                android:textSize="@dimen/txt_size_16" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_order_evaluate_color"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:text="@string/evaluate_title_color"
                                    android:textColor="@color/text_color_size" />

                                <TextView
                                    android:id="@+id/tv_order_evaluate_size"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:text="@string/evaluate_title_size"
                                    android:textColor="@color/text_color_size"
                                    android:textSize="@dimen/txt_size_13" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:textColor="@color/text_color_size">

                                <TextView
                                    android:id="@+id/tv_order_evaluate_number"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="@string/evaluate_title_number"
                                    android:textColor="@color/text_color_size" />

                                <TextView
                                    android:id="@+id/tv_order_evaluate_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="@string/evaluate_title_price"
                                    android:textColor="@color/text_color_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                style="@style/common_line_horizontal"
                android:contentDescription="@string/common_line_vertica" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_backgroud_color" />

            <ImageView
                style="@style/common_line_horizontal"
                android:contentDescription="@string/common_line_vertica" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_alading_sku_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alading_sku_icon"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/tv_alading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color_sku_name"
                    android:textSize="19sp" />
            </LinearLayout>

            <ImageView
                style="@style/common_line_horizontal"
                android:contentDescription="@string/common_line_vertica" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp"
                        android:text="评分"
                        android:textColor="@color/text_color_sku_name"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/app_evaluate_star"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:numStars="5"
                        android:progressDrawable="@drawable/shop_market_rating_bar_star"
                        android:rating="5.0"
                        android:stepSize="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_star_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:gravity="center_vertical"
                    android:text="@string/btn_feedback_tit"
                    android:textColor="@color/text_color_sku_name"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/ed_evaluate_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shop_market_bg_enter_code"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="@string/order_tv_evaluate"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:minLines="5"
                    android:padding="10dp"
                    android:textColor="@color/text_color_sku_name"
                    android:textColorHint="@color/edit_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:gravity="right"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_submit_evaluate"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/btn_bg"
                        android:text="@string/btn_submit1"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_evaluate_anonymity"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:src="@drawable/btn_select_up" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="匿名提交"
                        android:textColor="@color/text_color_sku_name"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>