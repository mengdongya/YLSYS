                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="民族"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="民族"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="职业"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_zhiye"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="职业"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="常住地"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/chang_zhudi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="常住地"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="身高"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="身高"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="体重"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="体重"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="联系方式"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_contact_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="联系方式(邮箱/微信)"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="身份证"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_ID_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="身份证"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/goHopitalLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px40"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/px80"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px15"
                    android:text="社保卡"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/user_shebao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="社保卡"
                    android:textSize="15sp"/>
