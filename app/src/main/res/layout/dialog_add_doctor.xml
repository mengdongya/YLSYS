<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/px10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginTop="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="姓名:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_text1" />

        <EditText
            android:id="@+id/help_doctor_name"
            android:layout_width="@dimen/px150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:background="@drawable/corners_login_bg_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px10"
        android:layout_marginLeft="@dimen/px10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="手机号:"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_text1" />

        <EditText
            android:id="@+id/help_doctor_phone"
            android:layout_width="@dimen/px150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:background="@drawable/corners_login_bg_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px40"
        android:layout_marginTop="@dimen/px15"
        android:gravity="center">

        <TextView
            android:id="@+id/add_doctor_sure"
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px30"
            android:background="@drawable/add_doctor_shape"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/add_doctor_canle"
            android:layout_width="@dimen/px60"
            android:layout_height="@dimen/px30"
            android:layout_marginLeft="@dimen/px50"
            android:background="@drawable/add_doctor_shape"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>