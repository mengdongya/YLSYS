<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gary" />

    <ScrollView
        android:id="@+id/ll_reply_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <EditText
                android:id="@+id/et_comment_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_comment_send"
                android:background="@drawable/bg_title_search"
                android:hint="请输入评论内容"
                android:maxLines="3"
                android:padding="@dimen/item_magin4"
                android:imeOptions="actionSend"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/item_text2" />

            <TextView
                android:id="@+id/tv_comment_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="发送"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>