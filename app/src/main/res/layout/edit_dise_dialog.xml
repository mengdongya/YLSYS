<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/edit_dise"
        android:text="你确定修改吗?"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1"
        android:background="@color/addAddressInfoTwo" />

    <RadioGroup
        android:id="@+id/edit_judge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px52"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/edit_dise_cancle"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="@drawable/delete_dise"
            android:textSize="15sp" />

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="wrap_content"
            android:background="@color/addAddressInfoTwo" />

        <RadioButton
            android:id="@+id/edit_dise_sure"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="确认"
            android:textColor="@drawable/delete_dise"
            android:textSize="15sp" />
    </RadioGroup>
</LinearLayout>