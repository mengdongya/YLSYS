<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="store.chinaotec.com.medicalcare.fragment.health.HealthControlFragment">

    <ScrollView
        android:id="@+id/sv_health"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/px10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/entry_name"
                        android:layout_width="@dimen/px0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px10"
                        android:text="姓名:"
                        android:textColor="#6d6d6d"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/entry_gender"
                        android:layout_width="@dimen/px0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px10"
                        android:text="性别:"
                        android:textColor="#6d6d6d"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/entry_age"
                        android:layout_width="@dimen/px0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px10"
                        android:text="年龄:"
                        android:textColor="#6d6d6d"
                        android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/entry_health_height"
                        android:layout_width="@dimen/px0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px10"
                        android:text="身高:"
                        android:textColor="#6d6d6d"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/entry_health_weight"
                        android:layout_width="@dimen/px0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px10"
                        android:text="体重:"
                        android:textColor="#6d6d6d"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="@dimen/px0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/px10"
                        android:textSize="11sp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px21"
                android:background="#31bcd0"
                android:gravity="center"
                android:text="指标监控"
                android:textColor="@android:color/white"/>

            <RadioGroup
                android:id="@+id/health_info_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px26"
                android:layout_marginLeft="@dimen/px24"
                android:layout_marginRight="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/blood_press_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/blood_press"
                    android:textColor="@drawable/health_info_selector"/>

                <RadioButton
                    android:id="@+id/heart_rate_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/heart_rate"
                    android:textColor="@drawable/health_info_selector"/>

                <RadioButton
                    android:id="@+id/blood_suger_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/blood_suger"
                    android:textColor="@drawable/health_info_selector"/>

                <RadioButton
                    android:id="@+id/blood_slipid_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/blood_slipid"
                    android:textColor="@drawable/health_info_selector"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginTop="@dimen/px10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/check_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainToolLine"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/check_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainToolLine"
                    android:textSize="12sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10">
                <TextView
                    android:id="@+id/tv_health_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/search_hint_text_color"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/slow_dise_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px180"
                android:padding="@dimen/dp10"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/top_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收缩压"
                            android:textSize="@dimen/px12"/>

                        <View
                            android:id="@+id/top_line"
                            android:layout_width="@dimen/px15"
                            android:layout_height="@dimen/px1"
                            android:layout_gravity="center_vertical"
                            android:background="#e62020"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="舒张压"
                            android:textColor="#000000"
                            android:textSize="@dimen/px12"
                            android:visibility="gone"/>

                        <View
                            android:layout_width="@dimen/px15"
                            android:layout_height="@dimen/px1"
                            android:layout_gravity="center_vertical"
                            android:background="#000000"
                            android:visibility="gone"/>
                    </LinearLayout>


                </LinearLayout>

                <RadioGroup
                    android:id="@+id/buy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp5"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/by_year"
                        android:layout_width="@dimen/px61"
                        android:layout_height="@dimen/px26"
                        android:background="@drawable/color_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="按年"
                        android:textColor="@drawable/health_info_selector"
                        android:textSize="@dimen/px12"/>

                    <RadioButton
                        android:id="@+id/by_month"
                        android:layout_width="@dimen/px61"
                        android:layout_height="@dimen/px26"
                        android:layout_marginLeft="@dimen/px10"
                        android:background="@drawable/color_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="按月"
                        android:textColor="@drawable/health_info_selector"
                        android:textSize="@dimen/px12"/>

                    <RadioButton
                        android:id="@+id/by_day"
                        android:layout_width="@dimen/px61"
                        android:layout_height="@dimen/px26"
                        android:layout_marginLeft="@dimen/px10"
                        android:background="@drawable/color_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="按日"
                        android:textColor="@drawable/health_info_selector"
                        android:textSize="@dimen/px12"/>
                </RadioGroup>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginTop="@dimen/px5"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fragment_health_controlv2_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableTop="@drawable/icon_medi_02"
                    android:gravity="center"
                    android:text="健康指标记录"
                    android:textColor="#6d6d6d"
                    android:textSize="@dimen/sp14"/>

                <TextView
                    android:id="@+id/tv_fragment_health_controlv2_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableTop="@drawable/icon_medi_01"
                    android:gravity="center"
                    android:text="锻炼监控"
                    android:textColor="#6d6d6d"
                    android:textSize="@dimen/sp14"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/slow_dise_two"
                android:gravity="center"
                android:text="饮食建议"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_advise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_health_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/iv_health_ad"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px80"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_color_gray"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="广告"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_health_ad_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_color_gray"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="关闭"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>