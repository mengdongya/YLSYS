<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mine="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="store.chinaotec.com.medicalcare.fragment.MineFragment">

    <RelativeLayout
        android:id="@+id/relative_mine_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTooBar"
        android:padding="@dimen/px5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/main_mine_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp20" />

        <TextView
            android:id="@+id/regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px10"
            android:padding="@dimen/dp5"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/px16" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px70"
        android:background="@color/colorTooBar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="@dimen/px38"
            android:layout_height="@dimen/px38"
            android:layout_marginLeft="@dimen/px25"
            android:layout_marginTop="@dimen/px15"
            android:scaleType="fitXY"
            android:src="@mipmap/user_local" />

        <RelativeLayout
            android:id="@+id/relative_login_suceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px15"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/user_info_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px15"
                android:layout_marginTop="@dimen/px25"
                android:src="@mipmap/arrow_right" />
        </RelativeLayout>

        <TextView
            android:id="@+id/click_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px10"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:text="点击登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp16" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />

    <store.chinaotec.com.medicalcare.view.SetItemView
        android:id="@+id/mine_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        mine:setItemLogo="@mipmap/mine_collection"
        mine:setItemTitle="@string/main_mine_collection" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />

    <store.chinaotec.com.medicalcare.view.SetItemView
        android:id="@+id/mine_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        mine:setItemLogo="@mipmap/mine_order"
        mine:setItemTitle="@string/main_mine_order" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px8"
        android:background="@color/mainLine" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine"
        android:visibility="gone"/>

    <store.chinaotec.com.medicalcare.view.SetItemView
        android:id="@+id/mine_my_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        mine:setItemLogo="@mipmap/mine_my_device"
        mine:setItemTitle="@string/main_mine_device"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />


    <store.chinaotec.com.medicalcare.view.SetItemView
        android:id="@+id/mine_ship_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        mine:setItemLogo="@mipmap/mine_ship_address"
        mine:setItemTitle="@string/main_mine_receive_address" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />

    <store.chinaotec.com.medicalcare.view.SetItemView
        android:id="@+id/mine_use_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        mine:setItemLogo="@mipmap/icon_use_guide"
        mine:setItemTitle="使用指南" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />

    <store.chinaotec.com.medicalcare.view.SetItemView
        android:id="@+id/mine_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        mine:setItemLogo="@mipmap/mine_setting"
        mine:setItemTitle="@string/main_mine_setting" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/mainToolLine" />
</LinearLayout>
