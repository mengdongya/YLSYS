<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="store.chinaotec.com.medicalcare.fragment.slowdise.SlowDiseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="@dimen/px10">

                <RelativeLayout
                    android:layout_width="@dimen/px107"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dise_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_person_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名:"
                            android:textColor="#6d6d6d"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/entry_name"
                            android:layout_width="@dimen/px0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/px10"
                            android:textColor="#02bda4"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别:"
                            android:textColor="#6d6d6d"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/entry_gender"
                            android:layout_width="@dimen/px0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/px10"
                            android:textColor="#02bda4"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年龄:"
                            android:textColor="#6d6d6d"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/entry_age"
                            android:layout_width="@dimen/px0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/px10"
                            android:textColor="#02bda4"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起病时间:"
                            android:textColor="#6d6d6d"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/entry_onset_time"
                            android:layout_width="@dimen/px0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/px10"
                            android:textColor="#02bda4"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="治疗药品:"
                            android:textColor="#6d6d6d"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/entry_treat_medic"
                            android:layout_width="@dimen/px0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/px10"
                            android:textColor="#02bda4"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px21"
                android:background="#31bcd0"
                android:gravity="center"
                android:text="指标监控"
                android:textColor="@android:color/white" />


            <RadioGroup
                android:id="@+id/health_info_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px26"
                android:layout_marginLeft="@dimen/px24"
                android:layout_marginRight="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/blood_press_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/blood_press"
                    android:textColor="@drawable/health_info_selector" />

                <RadioButton
                    android:id="@+id/heart_rate_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/heart_rate"
                    android:textColor="@drawable/health_info_selector" />

                <RadioButton
                    android:id="@+id/blood_suger_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/blood_suger"
                    android:textColor="@drawable/health_info_selector" />

                <RadioButton
                    android:id="@+id/blood_slipid_slowdise"
                    android:layout_width="@dimen/px0"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_weight="1"
                    android:background="@drawable/color_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/blood_slipid"
                    android:textColor="@drawable/health_info_selector" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginTop="@dimen/px10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/check_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainToolLine"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/check_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainToolLine"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:id="@+id/tv_disease_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/search_hint_text_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/slow_dise_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px180"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp10" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/top_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收缩压mmHg"
                            android:textSize="@dimen/px12" />

                        <View
                            android:id="@+id/top_line"
                            android:layout_width="@dimen/px15"
                            android:layout_height="@dimen/px1"
                            android:layout_gravity="center_vertical"
                            android:background="#e62020"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="舒张压"
                            android:textColor="#000000"
                            android:textSize="@dimen/px12"
                            android:visibility="gone" />

                        <View
                            android:layout_width="@dimen/px15"
                            android:layout_height="@dimen/px1"
                            android:layout_gravity="center_vertical"
                            android:background="#000000"
                            android:visibility="gone" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginRight="@dimen/px10"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_by_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/health_normal"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="按年"
                        android:textColor="@color/colorTooBar"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_by_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/health_normal"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="按月"
                        android:textColor="@color/colorTooBar"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_by_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/health_selected"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="按日"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/buy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginRight="@dimen/px20"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RadioButton
                        android:id="@+id/by_year"
                        android:layout_width="@dimen/px61"
                        android:layout_height="@dimen/px26"
                        android:background="@drawable/color_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="按年"
                        android:textColor="@drawable/health_info_selector"
                        android:textSize="@dimen/px12" />

                    <RadioButton
                        android:id="@+id/by_month"
                        android:layout_width="@dimen/px61"
                        android:layout_height="@dimen/px26"
                        android:layout_marginLeft="@dimen/px10"
                        android:background="@drawable/color_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="按月"
                        android:textColor="@drawable/health_info_selector"
                        android:textSize="@dimen/px12" />

                    <RadioButton
                        android:id="@+id/by_day"
                        android:layout_width="@dimen/px61"
                        android:layout_height="@dimen/px26"
                        android:layout_marginLeft="@dimen/px10"
                        android:background="@drawable/color_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="按日"
                        android:textColor="@drawable/health_info_selector"
                        android:textSize="@dimen/px12" />
                </RadioGroup>
            </RelativeLayout>

            <include layout="@layout/slow_dise_line" />

            <LinearLayout
                android:id="@+id/ll_other_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/slow_dise_three"
                        android:gravity="center"
                        android:text="病程记录"
                        android:textColor="@android:color/white" />

                    <LinearLayout
                        android:id="@+id/add_course_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="#f2f2f2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px5"
                        android:paddingTop="@dimen/px5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/add_course_record" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px10"
                            android:text="添加病程记录"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/time_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginLeft="@dimen/px15" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/slow_dise_one"
                    android:gravity="center"
                    android:text="治疗康复建议"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/treat_advise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/slow_dise_two"
                    android:gravity="center"
                    android:text="复诊检查建议"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/check_advise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>