<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/main_title_height"
    android:background="@color/white"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/title_btn_left"
        android:layout_width="@dimen/main_title_height"
        android:layout_height="@dimen/main_title_height"
        android:layout_centerVertical="true"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/shop_market_sku_detaile_title_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_color_orange"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv_sku_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="5dp"
                android:singleLine="true"
                android:text="商品"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv_graphic_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:padding="5dp"
                android:singleLine="true"
                android:text="详情"
                android:textColor="@color/text_color_sku_name"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <org.aorun.ym.module.shopmarket.common.referencecontrol.weight.BGABadgeRadioButton1
        android:id="@+id/title_btn_cart"
        style="@style/main_sku_cart"
        android:layout_width="@dimen/main_title_height"
        android:layout_height="@dimen/main_title_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_title_cart"
        android:drawableStart="@drawable/icon_title_cart"
        android:gravity="center"
        android:textSize="16sp" />

</RelativeLayout>