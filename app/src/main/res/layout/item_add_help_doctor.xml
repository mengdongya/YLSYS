<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px66"
    android:layout_marginTop="@dimen/px10"
    android:background="@drawable/add_doctor_item">

    <RelativeLayout
        android:id="@+id/relative_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/help_doctor_left"
        android:gravity="center">

        <TextView
            android:id="@+id/add_doctor_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px20"
        android:layout_toRightOf="@+id/relative_number"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_doctor_name"
            android:layout_width="@dimen/px60"
            android:layout_height="wrap_content"
            android:text="张医生"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50"
            android:text="电话:"
            android:textColor="#818181"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/add_doctor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:text="13526749840"
            android:textColor="#818181"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/call_phone"
        android:layout_width="@dimen/px25"
        android:layout_height="@dimen/px25"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/px15"
        android:src="@mipmap/phone" />
</RelativeLayout>