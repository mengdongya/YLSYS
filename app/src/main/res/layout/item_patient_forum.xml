<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px18"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/patient__foum_writer_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/writer_logo_one" />

        <TextView
            android:id="@+id/patient__foum_writer_name"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px10"
            android:layout_weight="1"
            android:text="张小萍"
            android:textColor="@color/paintFourmCont"
            android:textSize="@dimen/px13" />

        <TextView
            android:id="@+id/patient__foum_pst_time"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px150"
            android:layout_weight="1"
            android:text="14 : 22"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px20" />
    </LinearLayout>

    <TextView
        android:id="@+id/patient__foum_pst_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px18"
        android:text="如何防止胸闷气短"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px15" />

    <TextView
        android:id="@+id/patient__foum_pst_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px18"
        android:text="如何防止胸闷气短"
        android:textColor="@color/userPhone"
        android:textSize="@dimen/px15" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px5"
        android:background="@color/addAddressInfoTwo" />
</LinearLayout>