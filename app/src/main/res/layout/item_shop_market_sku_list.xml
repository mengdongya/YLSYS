<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY" />

    <!-- android:layout_margin="5dp" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@color/bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="@string/order_tv_order_num"
            android:textColor="@color/text_color_sku_name"
            android:textSize="@dimen/bottom_tab_font_size" />

        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color_sku_name"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color_sku_price"
            android:textSize="@dimen/bottom_tab_font_size" />

        <TextView
            android:id="@+id/tv_browse_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/text_color_sku_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sku_selfSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_color_belong_to_which_shop"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>