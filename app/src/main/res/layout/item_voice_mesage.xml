<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px15"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/px18"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px30"
            android:layout_height="@dimen/px30"
            android:layout_marginTop="@dimen/px10"
            android:src="@mipmap/self_other" />

        <TextView
            android:id="@+id/receive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px15"
            android:background="@drawable/receive_mess"
            android:gravity="center|left"
            android:singleLine="false"
            android:text="你好"
            android:textColor="#4f4f4f" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px18"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/send_text"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px15"
            android:layout_weight="1"
            android:background="@drawable/send_mess"
            android:gravity="center"
            android:singleLine="false"
            android:text="你好"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/send_photo"
            android:layout_width="@dimen/px50"
            android:layout_height="@dimen/px50"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/user_logo_send"
            android:layout_width="@dimen/px30"
            android:layout_height="@dimen/px30"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginTop="@dimen/px10"
            android:scaleType="fitXY"
            android:src="@mipmap/self_mine" />
    </LinearLayout>
</LinearLayout>