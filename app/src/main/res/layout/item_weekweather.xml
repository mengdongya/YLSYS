<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/item_magin3">

    <TextView
        android:id="@+id/week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/item_magin4"
        android:textColor="@color/white"
        android:text="--" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/week_icon"
            android:layout_width="@dimen/item_width3"
            android:layout_height="@dimen/item_height3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/week_maxtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/item_magin4"
                android:textColor="@color/white"
                android:text="--°" />

            <TextView
                android:id="@+id/week_mintemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/item_magin4"
                android:textColor="@color/white"
                android:text="--°" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/week_sky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="--" />
</LinearLayout>