<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/medic_item_logo"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp20"
        android:src="@mipmap/sign_nurse"/>

    <LinearLayout
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medic_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提供患者与医生 护士在线签约"
            android:textColor="@android:color/black"
            android:textSize="@dimen/middle_title_sp"/>

        <TextView
            android:id="@+id/medic_item_despion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:text="医生,护士签约"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/small_title_sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp20"
        android:src="@mipmap/arrow_right"/>
</LinearLayout>